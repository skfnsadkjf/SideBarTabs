{
	"manifest_version": 2,
	"name": "Side Bar Tabs",
	"version": "1.0.0",

	"description": "Makes a vertical sidebar for tabs",
	"icons": { "48": "icons/beasts-48.png" },

	"sidebar_action": {
		"default_title": "Tabs",
		"default_panel": "sidebar.html"
	},

	"background": {
		"scripts": [
			"background.js"
		]
	},

	"permissions": [
		"tabs",
		"sessions",
		"storage"
	],

	"applications": {
		"gecko": {
			"id": "{c0a99110-9fef-49e7-ab15-f2fb8c83f9d0}"
		}
	}


}